       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:annotation-config/>

    <bean class="com.spring.stereo.beans.hooks.config.executions.AppBeanFactoryPostProcessor"/>
    <bean class="com.spring.stereo.beans.hooks.config.executions.AppBeanPostProcessor"/>
    <bean class="com.spring.stereo.beans.hooks.config.executions.AppDao"/>
    <bean class="com.spring.stereo.beans.hooks.config.executions.AppService"/>

</beans>