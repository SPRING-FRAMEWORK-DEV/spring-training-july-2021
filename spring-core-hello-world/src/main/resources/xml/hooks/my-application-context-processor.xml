<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.spring.xml.beans.hooks.processors.AppBeanFactoryPostProcessor"/>
    <bean class="com.spring.xml.beans.hooks.processors.AppBeanPostProcessor"/>
    <bean id="default" class="com.spring.xml.beans.hooks.processors.DefaultCurrencyService"/>
    <bean id="indian" class="com.spring.xml.beans.hooks.processors.IndianCurrencyService"/>

</beans>